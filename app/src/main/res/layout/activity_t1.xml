<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applicationtest.delle1.example.com.logreg.t1"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TextView
android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_marginTop="20dp"
        android:textColor="@color/deeppurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="all"
        android:text="Bienvenue sur Java ! "
        android:textSize="22sp"
        app:fontFamily="sans-serif-black"
        android:scrollbars="vertical"
        />
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"


        >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



    <TextView

        android:id="@+id/text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:text="    Java est un langage de programmation moderne et de haut niveau conçu par sun Microsystems au début des années 1990 et appartenant actuellement à oracle \n
      java est indépendant de la plate-forme, ce qui signifie qu'il vous suffit d'écrire le programme une seule fois pour l'exécuter sur plusieurs plates-formes différentes!Java est portable, robuste et dynamique, avec la capacité de répondre aux besoins de tous les types d'applications."
        android:textSize="15sp"
       />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <TextView
        android:id="@+id/textt"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@color/pink1"
        android:text=" (!) Java garantit que vous ne pourrez écrire qu'une fois, Run Anywhere. "
        android:textColor="@color/darkblue"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/btn"
            android:textColor="@android:color/white"

            android:text="Quiz" />


        <Button
            android:id="@+id/bu3"
            android:textColor="@android:color/white"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/btn"
            android:text="Suivant" />
    </LinearLayout>


</LinearLayout>